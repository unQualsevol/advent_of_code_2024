{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "allowJs": true,
    "skipLibCheck": true,
    "declaration": true,
    "strictNullChecks": true,
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "*.ts",
    "**/*.spec.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
